<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/repo_item_layout_margin_top"
    card_view:cardCornerRadius="@dimen/repo_item_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/repo_item_layout_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="@integer/repo_item_title_max_lines"
            android:textColor="@color/colorRepoItemViewTitle"
            android:textSize="@dimen/repo_item_title_text_size"/>

        <TextView
            android:id="@+id/txt_repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/repo_item_margin_top"
            android:maxLines="@integer/repo_item_description_max_lines"
            android:textColor="@color/colorRepoItemViewDescription"
            android:textSize="@dimen/repo_item_description_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/repo_item_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="@dimen/repo_item_image_alpha"
                android:src="@drawable/ic_visibility_black_24dp"/>

            <TextView
                android:id="@+id/txt_repo_watchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/repo_item_image_right_margin"
                android:layout_marginLeft="@dimen/repo_item_image_left_margin"
                android:layout_marginRight="@dimen/repo_item_image_right_margin"
                android:layout_marginStart="@dimen/repo_item_image_left_margin"
                android:textColor="@color/colorRepoItemViewDescription"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="@dimen/repo_item_image_alpha"
                android:src="@drawable/ic_star_black_24dp"/>

            <TextView
                android:id="@+id/txt_repo_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/repo_item_image_right_margin"
                android:layout_marginLeft="@dimen/repo_item_image_left_margin"
                android:layout_marginRight="@dimen/repo_item_image_right_margin"
                android:layout_marginStart="@dimen/repo_item_image_left_margin"
                android:textColor="@color/colorRepoItemViewDescription"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="@dimen/repo_item_image_alpha"
                android:src="@drawable/ic_call_split_black_24dp"/>

            <TextView
                android:id="@+id/txt_repo_forks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/repo_item_image_right_margin"
                android:layout_marginLeft="@dimen/repo_item_image_left_margin"
                android:layout_marginRight="@dimen/repo_item_image_right_margin"
                android:layout_marginStart="@dimen/repo_item_image_left_margin"
                android:textColor="@color/colorRepoItemViewDescription"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>